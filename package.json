{
  "name": "clicko-flow-dashboard",
  "version": "1.0.0",
  "description": "Project Dashboard for Clicko Digital",
  "main": "backend/src/server.js",
  "scripts": {
    "start": "node backend/src/server.js",
    "dev": "concurrently \"npm run start\" \"cd backend && npm run dev\"",
    "build": "npm run build:frontend",
    "build:frontend": "REACT_APP_API_URL=http://localhost:5001/api react-scripts build && cp -r build/* public/",
    "build:backend": "cd backend && npm run build",
    "install-all": "npm install && cd backend && npm install",
    "postinstall": "npm run build:frontend"
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.8.1",
    "react-scripts": "5.0.1",
    "recharts": "^2.1.16",
    "lucide-react": "^0.263.1",
    "express": "^4.18.2",
    "mongoose": "^7.0.3",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.0",
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "helmet": "^6.0.1",
    "express-rate-limit": "^6.7.0"
  },
  "devDependencies": {
    "concurrently": "^7.6.0",
    "nodemon": "^2.0.22"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
